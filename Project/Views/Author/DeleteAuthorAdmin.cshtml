@model Project.Models.Author

@{

    ViewBag.Title = "Delete Author";
}

<!DOCTYPE html>

<html>
<body>
    <div class="main">
        <div class="container">
            <div class="dlt-container">
                <div class="dlt-paper-info">
                    <div class="avatar-flip">
                        <img src="@Url.Content(Model.ImagePath)" width="200" height="200" />
                    </div>
                    <h1 class="Name" onclick="location.href='@Url.Action("ViewPage", "Author", new {id = Model.Id})'">Author Name: @Html.DisplayFor(model => model.FName) @Html.DisplayFor(model => model.LName)</h1>
                    <h1>
                        Email: @Html.DisplayFor(model => model.Email)</h1>
                        <h1>ــــــــــــــــــــــــــــــــــــــــــــــ</h1>
                </div>
                <div class="dlt-info">
                    <h2 style="color:white;">Are you sure you want to delete this author ?</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <input type="submit" value="Delete" class="btn-dlt" />

                    }
                    <button class="btn-dlt" onclick="location.href='@Url.Action("IndexAuthor", "Author")'">Back</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
