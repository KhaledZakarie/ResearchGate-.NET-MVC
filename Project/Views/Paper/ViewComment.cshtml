
@model IEnumerable<Project.Models.CommentDB>

@{

    ViewBag.Title = "Comments";
}

<!DOCTYPE html>

<html>
<body>
    <div class="table-container">
        <table class="keywords">
            <thead>
                <tr>
                    <th><span>Images</span></th>
                    <th><span>Names</span></th>
                    <th><span>Comments Date</span></th>
                    <th><span>Comments</span></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="avatar-flip"><img src="@Url.Content(item.Author.ImagePath)" width="70" height="70" style="float :right" /></td>

                        <td class="Name" onclick="location.href='@Url.Action("ViewPage", "Author", new {id = item.AuthorId})'">
                            <a>@Html.DisplayFor(modelItem => item.Author.FName) @Html.DisplayFor(modelItem => item.Author.LName)</a>
                        </td>

                        <td>
                            <a>@Html.DisplayFor(modelItem => item.ActionDate)</a>
                        </td>

                        <td>
                            <a>@Html.DisplayFor(modelItem => item.Comment)</a>
                        </td>

                    </tr>
                }

            </tbody>

        </table>
    </div>
</body>
</html>
