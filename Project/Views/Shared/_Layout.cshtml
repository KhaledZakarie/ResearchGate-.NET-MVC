
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ResearchGate</title>
    <link href="~/Style/StyleSheet1.css" rel="stylesheet" />
</head>

<body>
    <header>
        @Html.ActionLink("Research Gate", "Home", "Author")
        @if (Session["username"] != null)
        {
            using (Html.BeginForm("SearchAuthor", "Author", FormMethod.Get))
            {
                <div style="background: white;border-radius: 20px;width: 500px;padding: 0 15px;">
                    <img src="~/Style/Images/search icon.png" style="width: 24px;opacity: 80%;">
                    <input id="search" name="search" type="text" placeholder=" Search" style="border-radius: 20px;border-width: 100%;
                                                                            padding: 5px;border: 0;outline: none;width: 400px;opacity: 70%;">
                </div>
            }
        }


        <nav class="navigation">


            @if (Session["username"] != null)
            {
                @Html.ActionLink("Profile", "LogIn", "Author")
                @Html.ActionLink("Logout", "LogOut", "Author")
            }
            else
            {
                @Html.ActionLink("Sign up", "Registration", "Author")
                @Html.ActionLink("Login", "LogIn", "Author")
            }


        </nav>
    </header>


    @RenderBody()



</body>
</html>
